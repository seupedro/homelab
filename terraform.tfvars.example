# Hetzner Cloud API Token
# Get your token from: https://console.hetzner.cloud/projects
# hcloud_token = "your_api_token_here"

# Server Configuration
# ------------------

# Name of your server (default: ccx11-server-ash)
# server_name = "my-ccx11-server"

# Server type (default: ccx11)
# CCX11 specs: 2 vCPUs (dedicated), 8GB RAM, 80GB SSD
# Other options: cx22, cpx31, cax11, ccx12, ccx13, etc.
# server_type = "ccx11"

# Location/datacenter (default: ash)
# ash  = Ashburn, Virginia, USA
# fsn1 = Falkenstein, Germany
# nbg1 = Nuremberg, Germany
# hel1 = Helsinki, Finland
# hil  = Hillsboro, Oregon, USA
# location = "ash"

# Operating System Image (default: ubuntu-24.04)
# Other options: ubuntu-22.04, ubuntu-20.04, debian-12, debian-11,
# centos-stream-9, rocky-9, fedora-39, alpine-3.20
# image = "ubuntu-24.04"

# Labels for organizing your servers
# Format: key = "value"
# server_labels = {
#   environment = "production"
#   project     = "my-project"
#   managed-by  = "terraform"
# }

# SSH Key Configuration (optional)
# --------------------------------

# Name for your SSH key in Hetzner Cloud
# ssh_key_name = "my-ssh-key"

# Path to your SSH public key
# ssh_public_key_path = "~/.ssh/id_rsa.pub"

# k3s Configuration (optional)
# --------------------------------

# k3s version to install (leave empty for latest)
# k3s_version = ""

# Additional arguments for k3s installation
# Examples: "--disable traefik", "--write-kubeconfig-mode 644"
# k3s_extra_args = ""

# Additional packages to install via cloud-init
# These are added to the default packages installed: ripgrep, nmap, vim,
# jq, htop, tree, unzip, wget, curl, git, tmux, net-tools, lsof, ncdu,
# dnsutils, traceroute, mtr
# additional_packages = ["docker.io", "python3-pip"]

# Cloudflare DNS Configuration
# -----------------------------

# Cloudflare API Token
# Get from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone.DNS (Edit)
# cloudflare_api_token = "your_cloudflare_api_token_here"

# Cloudflare Zone ID for pane.run
# Find in: https://dash.cloudflare.com/ → Select your domain → Zone ID in right sidebar
# cloudflare_zone_id = "your_zone_id_here"
